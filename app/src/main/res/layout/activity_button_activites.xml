<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.willydevelopment.jj.sphero.ButtonActivites">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:context=".ButtonActivities"
        android:id="@+id/ButtonActivityTable"
        android:layout_centerInParent="true">
        <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/positionXRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Position X"
            android:id="@+id/positionXTextView"
            android:gravity="center" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/positionYRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Position Y"
                android:id="@+id/positionYTextView"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/headerTableRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/TestDriveForwardButton"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Test Drive Forward"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onTestDriveForwardButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/backwardsButtonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/TestDriveBackwardsButton"
            android:layout_width="125dp"
            android:layout_height="75dp"
            android:background="#ffffff"
            android:textSize="18sp"
            android:text="Test Drive Backwards"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_gravity="center"
            android:onClick="onTestDriveBackwardsButtonClicked">
        </Button>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/SquareDriveButtonRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/SquareDriveButton"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Square"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onSquareDriveButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/AutoDriveButtonRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/AutoDriveButton"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Auto Drive"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onAutoDriveButtonClicked">
            </Button>
        </LinearLayout>
    </TableLayout>


</RelativeLayout>
