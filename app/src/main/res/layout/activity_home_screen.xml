<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen"
    android:gravity="center">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        tools:context=".HomeScreen"
        android:id="@+id/ConnectTable"
        android:layout_centerInParent="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/statusRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Waiting to roll...."
                android:id="@+id/statusTextView"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/positionYRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Position Y"
                android:id="@+id/positionYTextView"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/positionXRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Position X"
                android:id="@+id/positionXTextView"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/course1Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/course1Button"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#24f0c9"
                android:textSize="18sp"
                android:text="Course 1"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onCourse1ButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/course2Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/course2Button"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Course 2"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onCourse2ButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/course3Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/course3Button"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Course 3"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onCourse3ButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/course4Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/course4Button"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Course 4"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onCourse4ButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/course5Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/course5Button"
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:textSize="18sp"
                android:text="Course 5"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_gravity="center"
                android:onClick="onCourse5ButtonClicked">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/editTextRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(Distance in cm)"
                android:id="@+id/distanceEditText"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/headerTableRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Connecting...."
                android:id="@+id/connectTextView"
                android:gravity="center" />
        </LinearLayout>
    </TableLayout>
</RelativeLayout>
